<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#011432"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thông tin cá nhân"
            android:textColor="#FFF"
            android:textSize="15dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="#FFF"
            android:textSize="15dp"></TextView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Thông tin cá nhân"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="25dp"
        android:paddingRight="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_taikhoan"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/hinhtaikhoan"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/edt_text"
                    android:hint="Họ và tên"></TextView>

                <TextView
                    style="@style/edt_text"
                    android:hint="Ngày sinh"></TextView>

                <TextView
                    style="@style/edt_text"
                    android:hint="E-mail"></TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/edt_text"
            android:hint="E-mail"></TextView>

        <TextView
            style="@style/edt_text"
            android:hint="Số điện thoại"></TextView>
        <Button
            android:background="@drawable/bg_button1"
            android:textSize="10dp"
            android:text="Sửa"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_width="87"
            android:layout_height="28dp"></Button>
    </LinearLayout>

</LinearLayout>