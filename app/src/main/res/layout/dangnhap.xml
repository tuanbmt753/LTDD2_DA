<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  

    <ImageView
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_width="140dp"
        android:layout_height="80dp"></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="25dp"
        android:paddingRight="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    style="@style/edt_dangnhap"
                    android:hint="@string/email"></EditText>

                <EditText
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/anpass"
                    style="@style/edt_dangnhap"
                    android:hint="Mật khẩu"></EditText>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:textSize="14dp"
            android:textColor="#001111"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:layout_marginBottom="10dp"></TextView>
        <Button
            android:text="Đăng nhập"
            style="@style/btn_dangnhap"></Button>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Bạn chưa tài khoản?"
            android:textColor="#001111"
            android:textSize="14dp"></TextView>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Đăng ký"
            android:textStyle="bold"
            android:textColor="#15633A"
            android:textSize="14dp"></TextView>
    </LinearLayout>

</LinearLayout>